{
  "name": "ghostarr",
  "version": "1.2.0",
  "description": "Ghostarr - Newsletter generator for media server administrators",
  "scripts": {
    "predev": "npm run kill",
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && source .venv/bin/activate 2>/dev/null || true && uvicorn app.main:app --host 0.0.0.0 --port ${BACKEND_PORT:-6273} --reload",
    "kill": "pkill -f 'uvicorn app.main:app' 2>/dev/null || true; pkill -f 'vite' 2>/dev/null || true",
    "install": "npm run install:all",
    "install:all": "npm ci && npm run setup:backend && cd src/frontend && npm ci",
    "setup:backend": "cd src/backend && python -m venv .venv && . .venv/bin/activate && pip install -e .",
    "build": "cd src/frontend && npm run build",
    "docker": "docker compose -f docker/docker-compose.yml up --build",
    "docker:detach": "docker compose -f docker/docker-compose.yml up -d --build",
    "docker:stop": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && . .venv/bin/activate && pytest",
    "test:frontend": "cd src/frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd src/backend && . .venv/bin/activate && ruff check .",
    "lint:frontend": "cd src/frontend && npm run lint",
    "clean": "rm -rf src/backend/.venv src/frontend/node_modules src/frontend/dist",
    "release": "node scripts/release.js",
    "release:github": "node scripts/release.js --github",
    "release:deploy": "node scripts/release.js --deploy",
    "release:full": "node scripts/release.js --github --deploy"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "python": ">=3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sharkhunterr/ghostarr"
  },
  "keywords": [
    "newsletter",
    "ghost",
    "plex",
    "tautulli",
    "media-server"
  ],
  "author": "",
  "license": "MIT"
}
